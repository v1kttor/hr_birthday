<odoo>
  <data>
<!-- form view -->
    <record model="ir.ui.view" id="birth_form_view">
      <field name="name">birth.form</field>
      <field name="model">hr_birthday.birthday</field>
      <field name="arch" type="xml">
        <form string="Birth Form">
          <sheet>
            <group>
              <field name="birthday_employee"/>
              <field name="active"/>
              <field name="birthday_date"/>
              <field name="department_id"/>
              <field name="celebration_date"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>
<!-- tree view -->
    <record model="ir.ui.view" id="birht_tree_view">
      <field name="name">birth.tree</field>
      <field name="model">hr_birthday.birthday</field>
      <field name="arch" type="xml">
        <tree string="Birht tree">
          <field name="name"/>
          <field name="birthday_employee"/>
          <field name="birthday_date"/>
          <field name="department_id"/>
        </tree>
      </field>
    </record>
   <!-- birth actionas act_window -->
    <record model="ir.actions.act_window" id="birthday_list_action">
      <field name="name">Birthdays</field>
      <field name="res_model">hr_birthday.birth</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,from</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">Tell us the celebration Date
        </p>
      </field>
    </record>
<!-- skirti pridet i employees / birthdyas / Upcoming birthdays  -->
    <menuitem id="menu_birthday" parent="hr.menu_hr_root" name="Birthdays"/>
    <menuitem id="menu_birhtday_child" parent="menu_birthday" name="Upcoming birthdays" action="birth_list_action"/>
