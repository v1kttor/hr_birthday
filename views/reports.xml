<odoo>
  <data>
    <report
      id="report_birthday"
      model="hr.birthday"
      string="Birthday Report"
      name="hr.birthday_view"
      file="hr.report_birthday"
      report_type="qweb-pdf" />

    <template id="hr.birthday_view">
      <t t-call="report.html_container">
        <t t-foreach="docs" t-as="doc">
          <div class="page">
            <h2 t-field="doc.birthday_employee"/>
            <p>From <span t-field="doc.birthday_date"/> to <span t-field="doc.celebration_date"/></p>
            <h3>Attendees:</h3>
            <ul>
            </ul>
          </div>
        </t>
      </t>
    </template>
  </data>
</odoo>
