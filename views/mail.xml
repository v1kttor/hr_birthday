<odoo>
  <data>
    <record id="email_template_birthday" model="mail.template">
      <field name="name">Upcoming birthday</field>
      <field name="email_from">${object.company_id and object.company_id.email or ''}</field>
      <field name="subject">Upcoming birthday</field>
      <field name="email_to">${object.email|safe}</field>
      <field name="auto_delete" eval="True"/>
      <field name="model_id" ref="hr.model_res_partner"/>
      <field name="lang">${object.partner_id.lang}</field>
      <field name="body_html">
        <![CDATA[
	      <p>Dear ${(object.name)},<br/><br/>
	      We would like to inform you  <br/></p>
              Regards,<br/>
              ${(object.company_id.name)}
	    ]]>
      </field>
    </record>
  </data>
</odoo>
